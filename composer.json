{
    "name": "jomweb/billplz-phar",
    "description": "PHP Agnostic library for working with BillPlz API in PHAR",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Mior Muhammad Zaki",
            "email": "crynobone@gmail.com"
        }
    ],
    "require": {
        "jomweb/billplz": "3.2.0",
        "php-http/guzzle6-adapter": "^2.0"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.2"
    },
    "scripts": {
        "compile": [
            "composer install --no-dev",
            "./vendor/bin/box compile",
            "composer install"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform": {
            "php": "7.1.3"
        }
    },
    "minimum-stability": "stable"
}
